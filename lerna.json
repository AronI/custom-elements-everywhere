{
  "lerna": "2.11.0",
  "packages": [
    "libraries/**/*",
    "docs"
  ],
  "version": "1.0.0",
  "command": {
    "bootstrap": {
      "ci": true,
      "ignoreScripts": true
    },
    "add": {
      "ignore": [
        "libraries/__shared__/karma-plugins/*",
        "libraries/__shared__/webcomponents",
        "docs"
      ]
    },
    "run": {
      "ignore": [
        "libraries/__shared__/karma-plugins/*",
        "libraries/__shared__/webcomponents",
        "docs"
      ]
    }
  }
}
