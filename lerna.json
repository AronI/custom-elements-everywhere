{
  "lerna": "2.11.0",
  "packages": [
    "libraries/**/*",
    "docs"
  ],
  "version": "1.0.0",
  "command": {
    "bootstrap": {
      "ci": true,
      "ignoreScripts": true
    },
    "run": {
      "ignore": [
        "karma-*",
        "webcomponents",
        "docs",
        "@angular/core-tests",
        "angular-tests",
        "can-component-tests",
        "dio-tests",
        "@dojo/core-tests",
        "hyperhtml-tests",
        "@polymer/polymer-tests",
        "preact-tests",
        "react-tests",
        "skatejs-tests",
        "surplus-tests",
        "svelte-tests",
        "vue-tests"
      ]
    }
  }
}
